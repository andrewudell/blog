{
  "permissions": {
    "allow": [
      "Bash(npx create-next-app:*)",
      "Bash(node --version:*)",
      "Bash(npm --version:*)",
      "Bash(export NVM_DIR=\"$HOME/.nvm\")",
      "Bash([ -s \"$NVM_DIR/nvm.sh\" ])",
      "Bash(. \"$NVM_DIR/nvm.sh\")",
      "Bash(nvm install:*)",
      "Bash(nvm use:*)",
      "Bash(npx create-next-app@latest . --typescript --tailwind --app --no-src-dir --import-alias \"@/*\" --eslint --use-npm)",
      "Bash(npx -y create-next-app@latest . --typescript --tailwind --app --no-src-dir --import-alias \"@/*\" --eslint --use-npm --skip-install)",
      "Bash(npm install)",
      "Bash(npm install:*)",
      "Bash(npm run dev:*)",
      "Bash(git init:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)"
    ]
  }
}
